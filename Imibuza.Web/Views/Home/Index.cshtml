<link href="~/Content/Styling/landing-page.css" rel="stylesheet" />
<div id="landingPage">
    <div class="landing-page">
        <div class="col-md-11">
            <div class="col-md-4">
                <div class="logo">
                    <img src="~/Content/Images/Imibuza-Logo-White.png" />
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4">
                <div id="registration" hidden>
                    <div class="loginAndRegistration">
                        <div class="header">Register</div>
                        <div class="slogan">
                            <img src="~/Content/Images/Slogan.png" />
                        </div>
                        <div class="details" align="center">
                            <input class="form-control" placeholder="username" />
                            <input class="form-control" placeholder="password" />
                            <button class="btn">register</button>
                            <label>already registered?</label>
                            <a> sign in</a>
                        </div>
                        <div class="mwabu" align="center">
                            <img src="~/Content/Images/logo-white.png" />
                        </div>
                    </div>
                </div>

                <div id="login" hidden>
                    <div class="loginAndRegistration">
                        <div class="header">Login</div>
                        <div class="slogan">
                            <img src="~/Content/Images/Slogan.png"/>
                        </div>
                        <div class="details" align="center">
                            <input class="form-control" placeholder="username"/>
                            <input class="form-control" placeholder="password"/>
                            <button class="btn">register</button>
                            <label>not registered?</label>
                            <a> register now</a>
                        </div>
                        <div class="mwabu" align="center">
                            <img src="~/Content/Images/logo-white.png"/>
                        </div>
                    </div>
                </div>

                <div id="welcome">

                    <div class="loginAndRegistration">
                        <div class="welcome-message">Welcome</div>
                        @Html.Partial("_spinner");
                    </div>
                </div>

            </div>
        </div>


    </div>
</div>


<script>

   

    $(document).ready(function() {

    });

    $(window).on('load resize', function () {
        setTimeout(function() {
            var height = $(window).height();
            $(".landing-page").height(height);
        }, 10);
       
    });



</script>